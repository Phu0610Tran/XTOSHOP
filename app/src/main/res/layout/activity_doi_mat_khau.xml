<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_nhat"
    android:orientation="vertical"
    tools:context=".ActivityUser.InforUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/ibtnExit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            app:srcCompat="?attr/actionModeCloseDrawable"
            tools:ignore="SpeakableTextPresentCheck"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/size20dp"
            android:gravity="center|left"
            android:text="Đổi Mật Khẩu"
            android:textColor="@color/black"
            android:textSize="@dimen/size20dp"
            android:textStyle="bold"/>

    </LinearLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtMatkhaucu"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="@dimen/size10dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:ems="10"
            android:hint="Nhập mật khẩu cũ"
            android:inputType="textPersonName"
            android:paddingLeft="@dimen/size20dp"
            tools:ignore="SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtMatkhaumoi"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size20dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="Nhập mật khẩu mới"
            android:inputType="phone"
            android:maxLength="10"
            android:paddingLeft="@dimen/size20dp"
            tools:ignore="SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtNhaplaimatkhaumoi"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size20dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="Nhập lại mật khẩu mới"
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/size20dp"
            tools:ignore="SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/size10dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/btnDoimk"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/size30dp"
            android:backgroundTint="#00BCD4"
            android:hint="Xác Nhận"
            android:textColorHint="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnHuy"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:backgroundTint="#ED2011"
            android:hint="Hủy"
            android:textColorHint="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>