<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="@color/blue_nhat"
    tools:context=".ActivityUser.InforUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF">


        <ImageButton
            android:id="@+id/ibtnExit"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/quaylai"
            android:background="@null"

            tools:ignore="SpeakableTextPresentCheck"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/size20dp"
            android:gravity="center|left"
            android:text="Thông Tin Người Dùng"
            android:textSize="@dimen/size20dp"
            android:textStyle="bold"/>

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="230dp">
        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/img_user_cn"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/user"
            android:layout_gravity="center"/>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal | bottom">
            <ImageButton
                android:background="@null"
                android:scaleType="fitXY"
                android:id="@+id/imageButtonCamera"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/photo"
                android:layout_marginRight="10dp"
                />
            <ImageButton
                android:background="@null"
                android:scaleType="fitXY"
                android:id="@+id/imageButtonFolder"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/open"/>
        </LinearLayout>


    </FrameLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtTaikhoan"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="@dimen/size10dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:ems="10"
            android:hint="Tên Tài khoản"
            android:inputType="textPersonName"
            android:paddingLeft="@dimen/size20dp"
            tools:ignore="SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtSdt"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size20dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="Số Điện Thoại"
            android:inputType="phone"
            android:maxLength="10"
            android:paddingLeft="@dimen/size20dp"
            tools:ignore="SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size20dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/size20dp"
            tools:ignore="SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtDiachi"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center|left|top"
            android:layout_marginTop="@dimen/size20dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="Địa chỉ"
            android:inputType="textPersonName"
            android:paddingLeft="@dimen/size20dp"
            android:paddingTop="@dimen/size20dp"
            tools:ignore="SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/size10dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/btnCapnhat"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/size30dp"
            android:backgroundTint="#00BCD4"
            android:hint="Cập Nhật"
            android:textColorHint="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnDoimatkhau"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:backgroundTint="#8AFF1F0E"
            android:hint="Đổi Mật Khẩu"
            android:textColorHint="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>