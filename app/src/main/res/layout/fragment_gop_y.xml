<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9DDCE4"
    android:elevation="5dp"
    android:gravity="start"
    android:orientation="vertical"
    android:padding="2dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_marginTop="80dp"
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="@dimen/size20dp"
            android:text="Góp Ý"
            android:textSize="25dp"
            android:textColor="#0B0B0B"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size10dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtTaikhoangopy"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/size30dp"
                android:layout_marginTop="@dimen/size20dp"
                android:layout_marginRight="@dimen/size30dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="@string/username"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/size20dp"
                tools:ignore="SpeakableTextPresentCheck" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtSdtgopy"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/size30dp"
                android:layout_marginTop="@dimen/size20dp"
                android:layout_marginRight="@dimen/size30dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="@string/sdt"
                android:inputType="phone"
                android:maxLength="10"
                android:paddingLeft="@dimen/size20dp"
                tools:ignore="SpeakableTextPresentCheck" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtNoidunggopy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size30dp"
                android:layout_marginTop="@dimen/size20dp"
                android:layout_marginRight="@dimen/size30dp"
                android:background="@color/white"
                android:ems="10"
                android:maxLines="4"
                android:hint="Nhập nội dung ..."
                android:inputType="textMultiLine"

                tools:ignore="SpeakableTextPresentCheck" />

        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size10dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btnGopy"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/size30dp"
                android:layout_marginTop="@dimen/size20dp"
                android:layout_weight="1"
                android:backgroundTint="#3F51B5"
                android:hint="Gửi"
                android:textColorHint="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnThoatgopy"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="@dimen/size20dp"
                android:layout_weight="1"
                android:backgroundTint="#ED2011"
                android:hint="Thoát"
                android:textColorHint="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>