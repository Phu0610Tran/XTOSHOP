<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityAdmin.QL_ThemSanPham">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@color/blue_nhat"
        android:gravity="center">
        <ImageView
            android:id="@+id/quaylai_QLSP"
            android:scaleType="fitXY"
            android:layout_width="@dimen/size30dp"
            android:layout_height="@dimen/size30dp"
            android:src="@drawable/quaylai"/>
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quản Lý Sản Phẩm"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_TenSP_QLSP"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Tên Sản Phẩm"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:gravity="center |left"
                    android:textSize="15sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_GiaSP_QLSP"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Giá Sản Phẩm"
                    android:inputType="number"
                    android:paddingLeft="20dp"
                    android:gravity="center |left"
                    android:textSize="15sp"
                    tools:ignore="SpeakableTextPresentCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_SLSP_QLSP"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Số Lượng Sản Phẩm"
                    android:inputType="number"
                    android:paddingLeft="20dp"
                    android:gravity="center |left"
                    android:textSize="15sp"
                    tools:ignore="SpeakableTextPresentCheck" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_IDDanhMuc_QLSP"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="ID Danh Mục"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:gravity="center |left"
                    android:textSize="15sp"
                    tools:ignore="SpeakableTextPresentCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_SPmoi_QLSP"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Sản Phẩm Mới"
                    android:inputType="number"
                    android:paddingLeft="20dp"
                    android:gravity="center |left"
                    android:textSize="15sp"
                    tools:ignore="SpeakableTextPresentCheck" />

            </com.google.android.material.textfield.TextInputLayout>
            <ImageView
                android:id="@+id/imageViewHinh_QLSP"
                android:layout_marginTop="20dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/no_photos"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/buttonAdd"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"

                    android:text="Xác Nhận"/>
                <Button
                    android:id="@+id/buttonHuy_QlSP"
                    android:layout_marginLeft="@dimen/size20dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Hủy"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_marginTop="400dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="right">
            <ImageButton
                android:background="@null"
                android:scaleType="fitXY"
                android:id="@+id/imageButtonCamera"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/photo"
                android:layout_marginRight="10dp"/>
            <ImageButton
                android:background="@null"
                android:scaleType="fitXY"
                android:id="@+id/imageButtonFolder"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/open"/>
        </LinearLayout>

    </FrameLayout>


</LinearLayout>